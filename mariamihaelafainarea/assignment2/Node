/**
 *
 * @author maria
 */
public class Node<T> {
        private T key;
        private Node left,right;

        public Node getRight() {
            return right;
        }

        public void setLeft(Node left) {
            this.left = left;
        }

        public void setKey(T key) {
            this.key = key;
        }

        public void setRight(Node right) {
            this.right = right;
        }

        public Node getLeft() {
            return left;
        }

        public T getKey() {
            return key;
        }
        
        public Node(T key, Node left, Node right) {
            this.key = key;
            this.left = left;
            this.right = right;
        }
    }
