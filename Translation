package assignment6;

/**
 *
 * @author maria
 */
  public class Translation {
        public Character placeLast;
        public Character placeNext;
        public int car;
        
        public Translation(Character placeLast, Character placeNext, int car) {
            this.placeLast = placeLast;
            this.placeNext = placeNext;
            this.car = car;
        }
        
        public Translation() {
        }

    @Override
    public String toString() {
        return placeLast + " " + placeNext + " " + car;
    }
        
    }
